{
    "name": "mention/fast-doctrine-paginator",
    "description": "Fast Doctrine paginator for batching, infinite scrolling, Relay",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arnaud Le Blanc",
            "email": "arnaud.lb@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Mention\\FastDoctrinePaginator\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": ["tests"],
        "psr-4": {
            "Mention\\FastDoctrinePaginator\\Tests\\": "tests"
        }
    },
    "require": {
        "beberlei/assert": "^3.2",
        "mention/kebab": "^1.1.0",
        "mention/paginator": "^2.0"
    },
    "require-dev": {
        "doctrine/annotations": "^2.0",
        "doctrine/orm": "^2.12",
        "friendsofphp/php-cs-fixer": "^3.40.2",
        "mockery/mockery": "^1.3",
        "phing/phing": "^2.16",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10.47",
        "phpstan/phpstan-beberlei-assert": "^1.1.2",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-mockery": "^1.1.1",
        "phpstan/phpstan-strict-rules": "^1.5.2",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/cache": "^6.4"
    }
}
